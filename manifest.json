{
  "name": "UniversalDanmaku",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "给所有网站加上弹幕啊哈哈哈",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{  
         "matches": ["http://*/*","https://*/*"],   
         "js": ["content.js"],   
         "run_at": "document_start",  
         "all_frames": false   
  }],  
  "permissions": [
  ]
}